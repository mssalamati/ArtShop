                                    <a href="/profile/artworks" title="Link to Artwork" itemprop="url">
                                        <img src="//d3t95n9c6zzriw.cloudfront.net/common/placeholder-square-93.jpg" alt="" itemprop="image">
                                    </a>
                                </div>

