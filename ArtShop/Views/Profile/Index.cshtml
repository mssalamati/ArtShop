            <script type="text/x-tmpl" id="tmpl-follow-by">
                <section class="small-12 columns">
                    <a href="{%=o.target_url%}" title="{%=o.target_name%} homepage">
                        <img src="{%=o.target_profile_pic%}" alt="{%=o.target_name%}" class="avatar" />
                        <span>{%=o.target_name%}</span>
                    </a>
                    <span itemprop="comment">is now following {%=o.name%}</span>
                    <span itemprop="dateCreated">{%=o.activity_time%}</span>
                </section>
            </script>

            <script type="text/x-tmpl" id="tmpl-follow">
                <section class="small-12 columns">
                    <a href="{%=o.url%}" title="{%=o.name%}">
                        <img src="{%=o.profile_pic%}" alt="{%=o.name%}" class="avatar" />
                        <span itemprop="name">{%=o.name%}</span>
                    </a>
                    <span itemprop="comment">
                        is now following
                        <a href="{%=o.target_url%}" title="{%=o.target_name%} homepage" itemprop="url">
                            {%=o.target_name%}
                        </a>
                    </span>
                    <span itemprop="dateCreated">{%=o.activity_time%}</span>
                </section>
            </script>

            <script type="text/x-tmpl" id="tmpl-favorite">
                <section class="small-12 columns" itemscope itemtype="http://schema.org/CreativeWork">
