@model List<Product>
<div role="main" class="row row-layout profile-content">


    <div id="shareArt" class="share-module" data-url="http://www.saatchiart.com/account/artworks/994144" style="display: block;">
        <a class="share facebook" data-source="facebook" data-type="share" href="http://facebook.com/sharer.php?u=http%3A%2F%2Fwww.saatchiart.com%2Faccount%2Fartworks%2F994144" target="_blank">
            <i class="fa fa-facebook"></i>
        </a>
        <a class="twitter" href="https://twitter.com/intent/tweet?url=http%3A%2F%2Fwww.saatchiart.com%2Faccount%2Fartworks%2F994144&amp;text=View+Artworks+by+adib+dehghan+on+Saatchi+Art+%40SaatchiArt" target="_blank">
            <i class="fa fa-twitter"></i>
        </a>
        <a class="share pinterest" href="http://pinterest.com/pin/create/button/?url=http%3A%2F%2Fwww.saatchiart.com%2Faccount%2Fartworks%2F994144&amp;media=http:&amp;description=Artworks+by+adib+dehghan+on+Saatchi+Art+%23art" target="_blank">
            <i class="fa fa-pinterest"></i>
        </a>
        <a class="email so-email-to-friend-open" href="#" data-type="emailToFriend" data-emailtofriend="{&quot;url&quot;:&quot;http://www.saatchiart.com/account/artworks/994144&quot;,&quot;shareImage&quot;:&quot;&quot;,&quot;pageTitle&quot;:&quot;Artworks by adib dehghan&quot;}">
            <i class="fa fa-envelope"></i>
        </a>
        <div id="totalShares" class="total-share"><span>0</span></div>
    </div>


    <script>
    Saatchi.EmailToFriend.modalTrack = 'email-to-friend-page';
    Saatchi.EmailToFriend.modalUrl = '/social/email/page';
    Saatchi.EmailToFriend.modalTitle = 'Share this page';
    Saatchi.EmailToFriend.init();
    </script>        <header class="small-12 columns" itemprop="creator" itemscope="" itemtype="http://schema.org/Person">

        <a href="/profile" title="adib dehghan's profile" itemprop="url">
            <img src="//d3t95n9c6zzriw.cloudfront.net/common/profile/avatar_tiny_square.jpg" alt="avatar" class="avatar" itemprop="image">
            <h1 class="profile-subpage-name ellipsis" itemprop="name">@ViewBag.ProfileFullName</h1>
            <i class="fa fa-caret-left"></i> Back to Profile
        </a>

        <div class="artist-manage-links">
            <a href="/account/manage-art" title="Manage Artworks" itemprop="url">Manage Artworks</a>
            <span> | </span>
            <a href="/upload/index" class="">Upload Art</a>
        </div>
    </header>

    <div class="profile-nav large-12 columns">
        <a href="/account/artworks/994144" class="active" title="link to artwork">
            <i class="fa fa-suitcase"></i> Artwork <span>(@Model.Count)</span>
        </a>
        <a href="/account/collection/994144" class="" title="link to Collections">
            <i class="fa fa-th"></i> Collections <span>(1)</span>
        </a>
        <a href="/account/favorite/994144" class="" title="link to Favorites">
            <i class="fa fa-heart"></i> Favorites <span>(2)</span>
        </a>
    </div>
    <div class="row sort">
        <div id="listSort" class="favorites-sort small-12 medium-6 columns">
        </div>
        <div class="small-12 medium-6 columns view-options mt1">
            <div>View:</div> <button data-view="fullView" class="view-option btn-round btn-masonry so-quick-tip active" oldtitle="View multiple items"></button>
            <button data-view="pageWidthView" class="view-option btn-round btn-fullscroll so-quick-tip" oldtitle="View full-width, scrolling"><i class="fa fa-stop"></i></button>
            <button id="firstStop" data-view="slideshowView" class="view-option btn-round btn-slideshow so-quick-tip" onclick="$('.joyride-tip-guide').fadeOut();" oldtitle="View as slideshow"><i class="fa fa-expand"></i></button>
        </div>
    </div>
    <script>
        // [art.id_user_art, art.id_user_art, art.id_user_art]
    //Saatchi.Favorite.users = [2633376,3752244];
    </script>
    <div class="row">

        <ul id="infinite" class="item-list masonry" style="position: relative; height: 359.797px;">
            <li class="art-item upload-art" style="position: absolute; left: 0px; top: 0px;">
                <a href="/upload/index" title="Upload Art" class="profile-new-upload-art">
                    <i class="fa fa-upload icn-bg" style="display:inline-table"></i>
                    <span style="display:-webkit-inline-box">Upload Art</span>
                </a>
            </li>
            @foreach (Product item in Model)
            {
                <li itemscope="" itemtype="http://schema.org/CreativeWork" class="art-item fast-fade " style="position: absolute; left: 359px; top: 0px;" bxtracked="true">
                    <div class="list-art-image" itemscope="" itemtype="http://schema.org/ImageObject">
                        <div class="list-art-image-wrapper">
                            <a href="product/single/@item.Id" itemprop="url">
                                <img src="//@item.photo.Path" alt="Saatchi Art Artist adib dehghan; Photography, “photo - Limited Edition 1 of 1” #art" itemprop="contentURL">
                            </a>

                        </div>
                        <div class="item-controls" data-id="3863434" data-artist="994144" data-art="3672399">
                            <a href="#" data-collection-owner="994144" data-art-id="3672399" class="btn-round btn-add-to-collection hide-for-small-down" rel="nofollow" oldtitle="Add to Collection"><i class="fa fa-plus"></i></a>
                            <a href="/upload/edit/art/3672399/artist/994144" class="btn-round btn-edit" title="Edit" rel="nofollow"><i class="fa fa-pencil"></i></a>
                        </div>
                        <div class="list-art-meta">
                            <h4 class="list-art-title left ellipsis" itemprop="name">
                                <a href="/art/Photography-photo-Limited-Edition-1-of-1/994144/3672399/view">photo - Limited Edition @item.avaible of @item.AllEntity</a>
                            </h4>
                            <small class="art-category clear left">Photography, <span>@item.Height  H</span> x <span> @item.Width  W</span> x <span> @item.Depth </span> cm</small>

                            <div class="list-author clear left">
                                <h5 class="artist-name left ellipsis" itemprop="creator" itemscope="" itemtype="http://schema.org/Person">
                                    <a href="/profile" class="artist-card" title="Profile page for @ViewBag.profileFullName" itemprop="url">@ViewBag.profileFullName</a>
                                </h5>
                                <h5 class="user-location ellipsis clear" itemprop="contentLocation">Iran</h5>
                            </div>

                            <div class="list-art-price">
                            </div>
                        </div>
                    </div>
                </li>
            }
        </ul>
        <div class="clearfix"></div>
        <div id="pageNav" class="hidden">
            <a href="/account/artworks/id/994144/format/json/page/2">2</a>
        </div>
        <div id="pageLoading"></div>


    </div>
    <script type="text/javascript">
    Saatchi.Loader.load('profile', {js:true}, function() {
        Saatchi.Profile.init();
    });
    Saatchi.Loader.load('favorite', {js:true}, function() {
        Saatchi.Favorite.init();
    });
    Saatchi.Loader.load('fullview', {js:true}, function() {
        Saatchi.Fullview.init();
        Saatchi.Fullview.SetView.init();
        Saatchi.Fullview.FullScreen.init();
    });
    Saatchi.Loader.load('infinitescroll');
    Saatchi.Loader.load('pagination', {js:true}, function() {
        Saatchi.Pagination.type = 'art';
        Saatchi.Pagination.init();
    });

    $(document).on('click', '#listSort a', function (e) {
        e.preventDefault();
        $('.item-list li').css('opacity',.35);
        // replicate browse.js functionality where php factories look at cookie
        // TODO: rewrite all usages of browse.js and php factories to utilizes query string instead
        Saatchi.Cookie.create('category_sortBy', $(this).data('sort'));
        location.reload();
    });

        $('.joyride-tip-guide').delay(5000).fadeOut('slow');

    </script>
    <script type="text/x-tmpl" id="tmpl-art">
        <li itemscope itemtype="http://schema.org/CreativeWork" class="art-item fast-fade" data-page="{%=o.page%}">
            <div class="list-art-image" itemscope itemtype="http://schema.org/ImageObject">
                <div class="list-art-image-wrapper">
                    <a href="{%=o.artwork_url%}" itemprop="url">
                        <img src="{%=o.artwork_image_url%}7.jpg" alt="{%=o.art_title%}" itemprop="contentURL">
                    </a>
                </div>
                <div class="item-controls" data-id="{%=o.user_art_id%}">
                    {% if (o.original_sale_status === 'avail') { %}
                    <a href="/cart/add/{%=o.original_sku%}" class="btn-round btn-add-to-cart" title="Add to Cart" rel="nofollow"><i class="fa fa-shopping-cart"></i></a>
                    {% } %}
                    {% if ('994144' != o.artist_id) { %}
                    <a href="#" data-user="994144" data-favorite="false" class="btn-round btn-favorite" title="Remove from Favorites" rel="nofollow"><i class="fa fa-heart"></i></a>
                    {% } %}
                    <a href="#" data-collection-owner="{%=o.artist_id%}" data-art-id="{%=o.art_id%}" class="btn-round btn-add-to-collection hide-for-small-down" title="Add to Collection" rel="nofollow"><i class="fa fa-plus"></i></a>
                    {% if ('994144' == o.artist_id) { %}
                    <a href="{%=o.artwork_edit_url%}" class="btn-round btn-edit" title="Edit" rel="nofollow"><i class="fa fa-pencil"></i></a>
                    {% } %}
                </div>
                <div class="list-art-meta">
                    <h4 class="list-art-title left ellipsis" itemprop="name">
                        <a href="{%=o.artwork_url%}">{%=o.art_title%}</a>
                    </h4>
                    <small class="art-category clear left">{%=o.art_category%}, {%#o.art_dimensions_string%}</small>
                    {% if (o.original_sale_status === 'sold') { %}
                    <div class="right sold" itemprop="availability">sold</div>
                    {% } else if (o.original_sale_status === 'reserved') { %}
                    <div class="right reserved" itemprop="availability">reserved</div>
                    {% }  %}

                    <div class="list-author clear left">
                        <h5 class="artist-name ellipsis left" itemprop="creator" itemscope itemtype="http://schema.org/Person">
                            <a href="{%=o.artist_url%}" class="artist-card" title="{%=o.artist_name%}'s homepage" itemprop="url">{%=o.artist_name%}</a>
                        </h5>
                        <h5 class="user-location ellipsis clear" itemprop="contentLocation">{%=o.artist_country%}</h5>
                    </div>

                    <div class="list-art-price">
                        {% if (o.original_sale_status === 'avail' || o.original_sale_status === 'sold') { %}
                        <div itemprop="offers" itemscope itemtype="http://schema.org/Offer">
                            <div itemprop="price">
                                {%=o.aisp_price%}
                            </div>
                        </div>
                        {% }  %}
                        {% if (o.lowest_print_price) { %}
                        <div itemprop="offers" itemscope itemtype="http://schema.org/Offer">
                            <div class="sample-print-price" itemprop="price">
                                Prints from {%=o.lowest_print_price%}
                            </div>
                        </div>
                        {% }  %}
                    </div>

                    <div class="clearfix"></div>
                </div>
            </div>
        </li>
    </script>
    <div class="clearfix"></div>
</div>