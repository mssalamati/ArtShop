
@{
    ViewBag.Title = "Copyright Policy | Artiscovery";
}
<style>
    li {
        list-style-type: unset !important;
        list-style-position: inside !important;
    }

    ul {
        list-style-type: unset !important;
        list-style-position: inside !important;
    }
</style>

@model SitePageTranslation

@using DataLayer.Extentions
@{var IsRighToLeft = CultureHelper.IsRighToLeft();}

@if (IsRighToLeft)
{
    @Html.Partial("CopyrightRTL");
}
else
{
    <div class="row-layout content">
        <div class="row">
            <div class="small-12 large-8 large-push-4 columns bgtext content">
                <div id="so-terms-page" class="row">
                    @*<h1 class="page-title">Artiscovery Copyright Policy</h1>*@
                    @Html.Raw(Model.Content)
                </div>
            </div>
            <div class="small-12 large-4 large-pull-8 columns bgtext side-nav-container">
                <ul class="side-nav" style="height: 12602px;">
                    <li style="list-style-type:none !important"><a href="/pages/about">@ShareRes.About</a></li>
                    <li style="list-style-type:none !important"><a href="/pages/terms">@ShareRes.Terms</a></li>
                    <li style="list-style-type:none !important"><a href="/pages/privacypolicy">@ShareRes.Privacy_policy</a></li>
                    <li style="list-style-type:none !important"><a href="/pages/copyrightpolicy" class="active">@ShareRes.Copyright_policy</a></li>
                </ul>
            </div>

            <script>if ($(window).width() > 1023) { $('.bgtext.content').imagesLoaded(function () { var sidebarHeight = $('.bgtext.content').height(); $('.side-nav').height(sidebarHeight); }); }</script>
        </div>
        <div class="clearfix"></div>
    </div>
}