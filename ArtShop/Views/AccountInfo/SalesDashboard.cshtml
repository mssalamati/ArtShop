                <fieldset id="so-name-fieldset" class="fields">
                    <legend>Seller Account</legend>
                    <div id="upload-government-id" class="settings-inputs">
                        <p>
                            @ProfileRes.Identification_p2
                        </p>
                        <a class="button btn-info" href="/accountinfo/uploadid">@ProfileRes.Upload_id</a>
                    </div>
                </fieldset>
            </div>

        </div>
