
@{
    ViewBag.Title = "SalesDashboard | Artiscovery";
}

@model List<PayoutRequest>

@using DataLayer.Extentions

@{var IsRighToLeft = CultureHelper.IsRighToLeft();}

@{
    string side = "pull";
    string content = "push";
    string fl = "";

}

@if (IsRighToLeft)
{
    side = content; content = "pull";
    fl = "float:right !important";
    <style>
        .fields label {
            clear: right;
            float: right;
            text-align: right;
        }

        textarea.wide {
            padding-right: 0.75rem;
            text-align: right;
        }

        .page-title {
            text-align: right;
        }

        .mb2 {
            text-align: right;
        }

        .hd-title {
            text-align: right;
        }

        .side-nav-container {
            text-align: right;
        }
    </style>
}

<div class="row-layout content">

    <div class="row">
        <div class="small-12 large-8 large-@content-4 columns bgtext content" style="@fl">
            <h3 class="hd-title">@ProfileRes.Requestpayout</h3>
            <p class="mb2">@(string.Format(ProfileRes.accountValue, "$"+ ViewBag.account)) </p>

            @if (Model == null || Model.Count == 0 || Model.All(x => x.Seen))
            {
                using (Html.BeginForm("SalesDashboard", "accountinfo", FormMethod.Post, new { @class = "", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <fieldset class="fields">
                        <label>@ProfileRes.BankName</label>
                        <div>
                            <input class="wide" name="BankName" />
                        </div>

                        <label>@ProfileRes.CardNumber</label>
                        <div>
                            <input class="wide" name="CardNumber" />
                        </div>

                        <label>@ProfileRes.AccountNumber</label>
                        <div>
                            <input class="wide" name="AccountNumber" />
                        </div>

                        <label>@ProfileRes.AccountHolder</label>
                        <div>
                            <input class="wide" name="AccountHolder" />
                        </div>

                        <input type="submit" class="button btn-info mt1" value="@ProfileRes.Requestpayout">
                    </fieldset>
                }
            }

            <div id="so-shipping-id">
                <h3 class="page-title">@ProfileRes.History</h3>
                <table class="table table-hover">
                    <tr>
                        <td>@UploadRes.Date</td>
                        <td>@UploadRes.Amount</td>
                        <td>@UploadRes.Status</td>
                    </tr>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.date</td>
                                <td>@item.Value $</td>
                                @if (!item.Seen)
                                {
                                    <td>@ProfileRes.pending</td>
                                }
                                else if (item.Payed)
                                {
                                    <td>@ProfileRes.Payed</td>
                                }
                                else
                                {
                                    <td>@ProfileRes.Notpayed</td>
                                }
                            </tr>
                        }
                    }
                </table>
            </div>

        </div>
        <div class="small-12 large-4 large-@side-8 columns bgtext side-nav-container" style="@fl">

            <ul class="side-nav">
                <li class="profile ">
                    <a href="/accountinfo/index">@ProfileRes.Account_info</a>
                </li>
                <li class="profile ">
                    <a href="/accountinfo/profileinformation">
                        @ProfileRes.Profile_information
                    </a>
                </li>

                <li class="billing">
                    <a href="/accountinfo/billing">@ProfileRes.Address_Identification</a>
                </li>

                <li class="sold active">
                    <a href="/accountinfo/salesdashboard">@ProfileRes.Sales_Dashboard</a>
                </li>

                <li class="purchased">
                    <a href="/accountinfo/orders">@ProfileRes.Orders</a>
                </li>
            </ul>

            <div class="clearfix"></div>
        </div>
    </div>

    <div class="clearfix"></div>
</div>
