<div class="row-layout content">

    <div class="row">
        <div class="small-12 large-8 large-push-4 columns bgtext content">
            @using (Html.BeginForm("SalesDashboard", "accountinfo", FormMethod.Post, new { @class = "", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h3 class="hd-title">@ProfileRes.Identification_header</h3>
                <p class="mb2">@ProfileRes.Identification_p</p>
                <fieldset class="fields">
                    <label>one</label>
                    <div>
                        <input class="wide" />
                    </div>

                    <label>one</label>
                    <div>
                        <input class="wide" />
                    </div>

                    <label>one</label>
                    <div>
