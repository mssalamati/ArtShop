<body class="saatchi index bgcolor signed-out">
    <script>
        if (navigator.userAgent.match(/AppleWebKit/) && !navigator.userAgent.match(/Chrome/)) {
            document.body.className += ' safari';
        }
        else if (navigator.userAgent.indexOf('MSIE') !== -1 || !!navigator.userAgent.match(/Trident\/7\./)) {
            document.body.className += ' ie';
        }
        function isSafari5() {
            return !!navigator.userAgent.match('Safari/index.html') && !navigator.userAgent.match('Chrome') && !!navigator.userAgent.match(' Version/5.');
        };
        if (isSafari5() === true) {
            $('#unsupportedSafari').show();
        }
    </script>

    <div id="authentication-app-container">
        <div data-reactroot="" class="authentication">
            <!-- react-empty: 2 -->
            <header class="authentication__header animate-group-0-0">
                <a href="/">
                    <img alt="artiscovery Art Logo" style="width:200px;height:29px" src="~/Content/Images/logo.png">
                </a>
            </header>
            <div class="authentication__content">
                <div>
                    <!-- react-empty: 8 -->
                    <div>
                        <div class="authentication__content__section">
                            <div class="authentication__section-title animate-group-0-0">Register</div>
                            <h1 class="animate-group-0-4">@ShareRes.Welcome</h1>
                            <div class="animate-group-1-5 authentication__content__inner">

                                @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <br>
                                    <div class="authentication__or">
                                        <strong>@ShareRes.Or</strong>
                                    </div>
                                    <br>
                                    <div class="input-group">
                                        <div class="input-with-placeholder input-with-placeholder--has-value">
                                            @Html.LabelFor(m => m.FirstName, new { @class = "input-with-placeholder__label" })
                                            @Html.TextBoxFor(m => m.FirstName, new { @class = "input-with-placeholder__input ", id = "input-with-place-holder-0", name = "firstName" })
                                        </div>
                                        <div class="input-with-placeholder input-with-placeholder--has-value">
                                            @Html.LabelFor(m => m.LastName, new { @class = "input-with-placeholder__label" })
                                            @Html.TextBoxFor(m => m.LastName, new { @class = "input-with-placeholder__input ", id = "input-with-place-holder-1", name = "lastName" })
                                        </div>
                                    </div>
                                    <div class="input-group">
                                        <div class="input-with-placeholder input-with-placeholder--has-value">
                                            @Html.LabelFor(m => m.Email, new { @class = "input-with-placeholder__label" })
                                            @Html.TextBoxFor(m => m.Email, new { @class = "input-with-placeholder__input ", id = "input-with-place-holder-2", name = "email" })
                                        </div>
                                    </div><div class="input-group">
                                        <div class="input-with-placeholder input-with-placeholder--has-value">
                                            @Html.LabelFor(m => m.Password, new { @class = "input-with-placeholder__label" })
                                            @Html.PasswordFor(m => m.Password, new { @class = "input-with-placeholder__input ", id = "input-with-place-holder-3", name = "password" })

                                        </div>
                                    </div>

                                    <div style="margin-top:10px"><strong>@ShareRes.Select_profile_type</strong></div>
                                    <div style="margin-bottom:10px"><small>You’ll be able to change this later</small></div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input id="IsArtist" type="hidden" />
                                            <button type="button" id="collectorButton" onclick="ChangeState(1)" class="btn btn--block">I am a collector</button>
                                        </div>
                                        <div class="col-md-6">
                                            <button type="button" id="artistButton" onclick="ChangeState(2)" class="btn btn--block">I am an artist</button>
                                        </div>
                                    </div>

                                    <br>
                                    <button type="submit" class="btn btn--green btn--block">Register</button>
                                    <br>
                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                    <strong>
                                        <!-- react-text: 40 -->Already have an account? <!-- /react-text -->
                                        <a href="/Account/Login">Sign In</a>
                                    </strong>

                                }
                            </div>

                            <div class="authentication__section-footer animate-group-1-12 authentication__section-footer--light"><!-- react-text: 43 -->By signing up, you agree to our <!-- /react-text --><a href="/terms">Terms of Use</a><!-- react-text: 45 --> and&nbsp;<!-- /react-text --><a href="/privacy">Privacy Policy</a><!-- react-text: 47 -->. You'll receive weekly updates on recently added artworks, new curated collections, featured artists, and more.<!-- /react-text --></div><div class="authentication__loader"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*<script>var Modernizr = false;</script>*@

