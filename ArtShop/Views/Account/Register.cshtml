                                    <strong>
                                        <!-- react-text: 40 -->@ShareRes.Already_have <!-- /react-text -->
                                        <a href="/Account/Login">@ShareRes.SignIn</a>
                                    </strong>

                                }
                            </div>

                            <div class="authentication__section-footer animate-group-1-12 authentication__section-footer--light" style="@rtlstl"><!-- react-text: 43 -->@ShareRes.Register_des_p1 <!-- /react-text --><a href="/pages/terms">@ShareRes.Terms_use</a><!-- react-text: 45 --> @ShareRes.And&nbsp;<!-- /react-text --><a href="/pages/privacypolicy">@ShareRes.Privacy_policy</a><!-- react-text: 47 --> @ShareRes.Register_des_p2<!-- /react-text --></div><div class="authentication__loader"></div>
