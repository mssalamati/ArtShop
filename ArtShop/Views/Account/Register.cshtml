    <script>

        function ChangeState(id) {
            if (id == 1) {
                $('#artistButton').removeClass('btn--selected');
                if (!$('#collectorButton').hasClass('btn--selected'))
                    $('#collectorButton').addClass('btn--selected');

                $('#isArtist').val = 1;

            }
            else {
                $('#collectorButton').removeClass('btn--selected');
                if (!$('#artistButton').hasClass('btn--selected'))
                    $('#artistButton').addClass('btn--selected');

                $('#isArtist').val = 0;
            }
        }
    </script>

</body>
</html>




