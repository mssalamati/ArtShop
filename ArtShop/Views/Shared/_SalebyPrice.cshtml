@model FirstPageSection

@{
    Pricethreshold p1 = (Pricethreshold)ViewBag.p1;
    Pricethreshold p2 = (Pricethreshold)ViewBag.p2;
    Pricethreshold p3 = (Pricethreshold)ViewBag.p3;
    Pricethreshold p4 = (Pricethreshold)ViewBag.p4;
    Pricethreshold p5 = (Pricethreshold)ViewBag.p5;
}

<!-- Browse Art for Sale by Price  -->
<div class="row browse-by">
    <div class="small-12 columns">
        <h2 class="section-title mb1">Browse Art for Sale by Price</h2>
    </div>
</div>
<div class="row browse-by">
    <div class="small-12 medium-8 columns browse-item-large"
         style="background-size: cover;background-image: url('@ViewBag.pic1')">
        <a href="/search?category=0&style=0&subject=0&medium=0&price=@p1.Id" class="flexcontainer">
            <!-- internationalization test -->
            @if (p1.min.HasValue && p1.max.HasValue)
            {
                <div>
                    <em>Artworks</em>
                    $@p1.min.Value &mdash; $@p1.max.Value
                </div>
            }
            else if (!p1.min.HasValue && p1.max.HasValue)
            {
                <div>
                    <em>Artworks up to</em>
                    $@p1.max.Value
                </div>
            }
            else if (p1.min.HasValue && !p1.max.HasValue)
            {
                <div>
                    <em>Artworks from</em>
                    $@p1.min.Value
                </div>
            }

            <button onclick="document.location.href = '/search?category=0&style=0&subject=0&medium=0&price=@p1.Id'">View Artworks</button>
        </a>
    </div>
    <div class="small-12 medium-4 columns browse-item"
         style="background-size:contain;background-image: url('@ViewBag.pic2')">
