@{
    var a = ViewContext.Controller.ValueProvider.GetValue("action").RawValue.ToString().ToLower();
    var c = ViewContext.Controller.ValueProvider.GetValue("controller").RawValue.ToString().ToLower();
    if (c == "profile")
    {
        if (a == null || c == "favorites")
        {
            c = "profile";
        }
        else if (a == "newcollection")
        {
            c = "collections create";
        }
        else if (a == "collectionview")
        {
            c = "art-collection";
        }
        else if (a == "editcollection")
        {
            c = "";
        }

    }
    else if (c == "accountinfo")
    {
        c = "accounts";
    }
    else
    {
        c = "index";
    }
}
<body class="saatchi @c bgcolor signed-out">
    <script>
        if (navigator.userAgent.match(/AppleWebKit/) && !navigator.userAgent.match(/Chrome/)) {
            document.body.className += ' safari';
        }
        else if (navigator.userAgent.indexOf('MSIE') !== -1 || !!navigator.userAgent.match(/Trident\/7\./)) {
            document.body.className += ' ie';
        }
        function isSafari5() {
            return !!navigator.userAgent.match('Safari/index.html') && !navigator.userAgent.match('Chrome') && !!navigator.userAgent.match(' Version/5.');
        };
        if (isSafari5() === true) {
            $('#unsupportedSafari').show();
        }
    </script>

    @Html.Action("Header", "Home", null)

    @RenderBody()

    @Html.Partial("_Footer")

    <script>var Modernizr = false;</script>
    <script src="~/Content/js/dist/foundation/foundation5-5.min4baf.js?version=1468284677"></script>
    <div id="fb-root"></div>
    <script type="text/javascript">
        Saatchi.NewDesktopNavigation.init();
        Saatchi.NewMobileNavigation.init();
    </script>

    <div id="unsupportedSafari">
        <div class="faux-modal">
            <h2>Safari 5.x and below is not supported on Saatchi Art.</h2>
            <p>
                Please see <a href="http://support.apple.com/kb/HT202908" title="Install Safari 6">"How to install Safari 6"</a>
                (minimum requirements, Mac OS X Lion v10.7.5). You may also try <a href="http://www.google.com/chrome" title="Download Chrome">Chrome</a>
                or <a href="http://www.mozilla.org/" title="Download Firefox">Firefox</a>.
            </p>
        </div>
    </div>

    <script>
        $(".dropdown").click(function () {
            if ($('.dropdown-content').hasClass('show'))
                $('.dropdown-content').removeClass('show');
            else
                $('.dropdown-content').addClass('show');
        });

        window.onclick = function (event) {
            if (!event.target.matches('.dropdown') && 
                !event.target.matches('.desktop-navigation__context-link') &&
                !event.target.matches('.lnsp') &&
                 !event.target.matches('.pchl')) {
                var dropdowns = $(".dropdown-content");
                if (dropdowns.hasClass('show')) {
                    dropdowns.removeClass('show');
                }
            }
        }
    </script>

    @* @Scripts.Render("~/bundles/jquery") @RenderSection("scripts", required: false)*@
