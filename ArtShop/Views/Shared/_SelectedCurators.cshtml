@model FirstPageSection

@{
    var IsRighToLeft = CultureHelper.IsRighToLeft();
    var tar = IsRighToLeft ? "text-align:right" : "";
}

@using DataLayer.Extentions

<div class="row">
    <div class="small-12 columns">
        <h2 style="@tar" class="section-title mt0">@SearchRes.Art_Selected_by_our_Curators</h2>
        <div style="@tar" class="section-details">@SearchRes.discover_new_original</div>
    </div>
</div>
<div class="row">
    <ul class="item-list">
        <li class="list-item feature" style="@tar">
            <div class="feature-image">
                <a href="/products/single/@Model.param1" title="See What's New This Week		">
                    <img src="@ViewBag.pic1">
                </a>
            </div>
            <div class="row feature-meta" style="height:auto">
                <h3 class="feature-title ellipsis">
                    <a href="/products/single/@Model.param1">
                        @Model.Current().title
                    </a>
                </h3>
                <span class="feature-subtitle ellipsis">
                    <a href="/products/single/@Model.param1">
                        @Model.Current().desc1
                    </a>
                </span>
            </div>
        </li>
        <li class="list-item feature" style="@tar">
            <div class="feature-image">
                <a href="/products/single/@Model.param2" title="Artiscovery Catalog">
                    <img src="@ViewBag.pic2">
                </a>
            </div>
            <div class="row feature-meta" style="height:auto">
                <h3 class="feature-title ellipsis">
                    <a href="/products/single/@Model.param1">
                        @Model.Current().title2
                    </a>
                </h3>
                <span class="feature-subtitle ellipsis">
                    <a href="/products/single/@Model.param2">
                        @Model.Current().desc2
                    </a>
                </span>
            </div>
        </li>
        <li class="list-item feature" style="@tar">
            <div class="feature-image">
                <a href="/products/single/@Model.param3" title="Invest In Art: Spring 2017">
                    <img src="@ViewBag.pic3">
                </a>
            </div>
            <div class="row feature-meta" style="height:auto">
                <h3 class="feature-title ellipsis">
                    <a href="/products/single/@Model.param1">
                        @Model.Current().title3
                    </a>
                </h3>
                <span class="feature-subtitle ellipsis">
                    <a href="/products/single/@Model.param3">
                        @Model.Current().desc3
                    </a>
                </span>
            </div>
        </li>
    </ul>
</div>
