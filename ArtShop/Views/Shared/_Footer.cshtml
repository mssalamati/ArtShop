</footer>


<script>
    function parsContent(result) {
        if (result == "done") {
            $.toast({
                heading: 'Success',
                text: 'subscription successful',
                icon: 'success',
                showHideTransition: 'slide',
                position: 'top-right',
                hideAfter: 7000
            })
        } else {

            $('#ajaxrender').html(result);
        }
    }
</script>
