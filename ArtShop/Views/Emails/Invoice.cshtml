<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="invoice-title">
                <h2>Order #@ViewBag.orderid</h2>
                <hr>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <address>
                        <strong>Billed To:</strong><br>
                        @ViewBag.fullname<br>
                        @ViewBag.address<br>
                    </address>
                </div>
                <div class="col-xs-6 text-right">
                    <address>
                        <strong>Shipped To:</strong><br>
                        @ViewBag.fullname<br>
                        @ViewBag.shipaddress<br>
                    </address>
                </div>
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><strong>Order placed on @ViewBag.orderdate</strong></h3>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <td><strong>Product</strong></td>
                                    <td class="text-center"><strong>Price</strong></td>
                                    <td class="text-center"><strong>Quantity</strong></td>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- foreach ($order->lineItems as $line) or some such thing here -->
                                @foreach (OrderDetail item in (List<OrderDetail>)ViewBag.products)
                                {
                                    <tr>
                                        <td class="col-md-3">
                                            <div class="media">
                                                @*<a class="thumbnail pull-left" href="#">
                                                    <img class="media-object" src="@item.Product.photo.Path" style="width: 72px; height: 72px;">
                                                </a>*@
                                                <div class="media-body">
                                                    <h4 class="media-heading"> @item.Product.Title</h4>
                                                    <h5 class="media-heading"> @item.Quantity</h5>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">$10.99</td>
                                        <td class="text-center">1</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-4">
                <h3 class="text-center">Order Summary</h3><hr>
                <div class="pull-left"><h4>Subtotal</h4> </div>
                <div class="pull-right"><h4 class="text-right">@ViewBag.subtotal</h4></div>
                <div class="clearfix"></div>
                @*<div class="pull-left"><h4>Tax</h4> </div>
                <div class="pull-right"><h4 class="text-right">@ViewBag.tax</h4></div>
                <div class="clearfix"></div>*@
                @*<div class="pull-left"><h4>Order Total</h4> </div>
                <div class="pull-right"><h4 class="text-right">@ViewBag.total</h4></div>
                <div class="clearfix"></div>*@
            </div>
            <div class="col-md-4 offset-md-1">
                <h3 class="text-center">Payment Type</h3><hr>
                <div class="text-center">
                    <strong>Paid by ZarrinPal</strong><br>
                </div>
            </div>
            <div class="col-md-4 offset-md-2">
                <h3 class="text-center">Other Info</h3><hr>
                <address>
                    <strong>Billed To:</strong><br>
                    @ViewBag.fullname<br>
                    @ViewBag.address<br>
                </address>
            </div>
        </div>
    </div>
</div>
