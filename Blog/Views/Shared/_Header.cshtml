@using Blog.Extentions;
@using Blog.Objects;
@model IList<Category>
<header>
    <div class="row hidden-xs hidden-sm">
        <div class="col-lg-offset-4 col-lg-4 main-logo">
            <h1>
                <a href="http://blog.artiscovery.com/" title="Artiscovery">Blog</a>
            </h1>
            <h2>
                <a href="http://www.artiscovery.com/" target="_blank">A blog by Artiscovery</a>
            </h2>
        </div><!-- .main-logo -->
    </div><!-- .row -->

    <div class="row hidden-xs hidden-sm">
        <div class="col-lg-12">
            <nav class="menu-primary-navigation-container">
                <ul id="primary-menu" class="nav clearfix">
                    <li id="menu-item-47373" class="mobile-item menu-item menu-item-type-custom menu-item-object-custom current-menu-item current_page_item menu-item-home menu-item-47373"><a href="http://Artiscovery.com/">Artsiscovery</a></li>
                    @foreach (var item in Model)
                    {
                        <li id="menu-item-42540" class="menu-item menu-item-type-taxonomy menu-item-object-category menu-item-42540"><a href="@Url.Action(@item.Name,"Category", new { id = @item.GenerateSlug()})">@item.Current().Name</a></li>
                    }
                    <li id="menu-item-42552" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-42552"><a href="/search">Search</a></li>
                </ul>
            </nav>
        </div><!-- .col-lg-12 -->
    </div><!-- .row -->

    <div class="row hidden-md hidden-lg">
        <div class="dropdown mobile-menu">
            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                <span class="mobile-logo"></span>
                <span class="mobile-tagline">A blog by Saatchi Art</span>
                <span class="fa fa-chevron-down"></span>
            </button>

            <ul id="menu-primary-navigation" class="dropdown-menu">
                <li class="mobile-item menu-item menu-item-type-custom menu-item-object-custom current-menu-item current_page_item menu-item-home menu-item-47373"><a href="http://Artsiscovery.com/">Artsiscovery</a></li>
                @foreach (var item in Model)
                {
                    <li id="menu-item-42540" class="menu-item menu-item-type-taxonomy menu-item-object-category menu-item-42540"><a href="@Url.Action(@item.Name,"Category", new { id = @item.GenerateSlug() })">@item.Current().Name</a></li>
                }
                <li class="menu-item menu-item-type-post_type menu-item-object-page menu-item-42552"><a href="/search">Search</a></li>
            </ul>
        </div><!-- .drowpdown -->
    </div><!-- .row -->
</header>
