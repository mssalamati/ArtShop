@using Blog.Extentions
@using Blog.Objects
@{
    ViewBag.Title = "Artiscovery Blog";
    var widePostCol = "col-lg-8 col-md-12";
    var sqrPostCol = "col-lg-4 col-md-6";
}
@model IList<Post>
<div id="primary" class="content-area">
    <main id="main" class="site-main" role="main">
        <div class="row">
        @{ var showcasePost = Model.FirstOrDefault(a => a.postType == PostType.ShowCase);}
            <div class="col-lg-8 col-md-12">
                <div class="showcase">
                    <div class="img-holder">
                        <a href="@Url.Action(@showcasePost.Category.Name, "Post", new { id = @showcasePost.GenerateSlug() })">
                            <img width="300" height="300" src="@showcasePost.Thumbnail" class="attachment-saatchi-medium size-saatchi-medium wp-post-image" alt="">
                        </a>
                    </div><!-- .img-holder -->

                    <div class="showcase-detail">
                        <h3><a href="@Url.Action(@showcasePost.Category.Name,"Category", new { id = @showcasePost.Category.GenerateSlug()})">@showcasePost.Category.Current().Name</a></h3>
                        <h4>
                            <a href="@Url.Action(@showcasePost.Category.Name, "Post", new { id = @showcasePost.GenerateSlug() })">
                                @showcasePost.Current().Title
                            </a>
                        </h4>
                        <div class="excerpt-container">
                            <p></p><p>@showcasePost.Current().ShortDescription ...</p>
                            <p></p>
                        </div>

                    </div><!-- .showcase-detail -->
                </div><!-- .showcase -->
            </div><!-- .col-lg-8 -->

            <div class="col-lg-4 col-md-12">


                <div class="widget-area" role="complementary">
                    <aside id="saatchi_widget_recent_tweets-2" class="widget widget_saatchi_widget_recent_tweets"><div class="recent-tweet post-element"><div class="no-image"><h4>Australian Designer Lisa Gorman Talks Art, Fashion, and How She Marries the Two (Plus, her Art Picks):… <a href="https://t.co/7cu0qav24V" target="_blank">https://t.co/7cu0qav24V</a></h4></div><i class="fa fa-twitter"></i><p class="twitter-credit"><a href="https://twitter.com/saatchiart/" target="_blank"><span></span></a>5 hours ago</p></div></aside>
                </div><!-- #secondary -->

                <div class="mail-list-container hidden-xs hidden-sm">
                    <div class="feedback-overlay"></div>
                    <div class="found-overlay">
                        <div>
                            <h2>Good news!</h2>
                            <p>You are already subscribed</p>
                        </div>
                    </div>
                    <div class="success-overlay">
                        <div>
                            <h2>Congratulations!</h2>
                            <p>You successfully signed up</p>
                        </div>
                    </div>

                    <a href="javascript:void(0);" class="close-btn"></a>

                    <h3>Sign up for our email list</h3>
                    <p>Find out about new art and collections added weekly</p>

                    <div class="content">
                        <div class="feedback">
                            <span></span>
                        </div>

                        <form action="" class="sign-up" novalidate="">
                            <input type="hidden" id="saatchi_wpnonce_field" name="saatchi_wpnonce_field" value="bbfe787331"><input type="hidden" name="_wp_http_referer" value="/">                            <input type="hidden" name="source" value="blog-top" autocomplete="off">
                            <input type="text" id="honeypot" name="honeypot" placeholder="Leave this field blank" autocomplete="off">
                            <input type="email" name="email" placeholder="Email Address" autocomplete="off">
                            <button type="submit" class="signup-head">Sign up</button>
                        </form>
                    </div><!-- .content -->
                </div><!-- .mail-list-container -->

            </div><!-- .col-lg-4 -->
        </div><!-- .row -->

        <div class="row">

            @foreach (var item in Model)
            {
                var postClass = item.postType == PostType.Sqr ? sqrPostCol : widePostCol;
                if (item.postType != PostType.ShowCase)
                {
                    <div class="@postClass">
                        <div class="post-element">
                            <div class="img-holder">
                                <a href="@Url.Action(@item.Category.Name, "Post", new { id = @item.GenerateSlug() })">
                                    <img width="300" height="300" src="@item.Thumbnail" class="attachment-saatchi-medium size-saatchi-medium wp-post-image" alt="">
                                </a>
                            </div><!-- .img-holder -->

                            <h3><a href="@Url.Action(@item.Category.Name,"Category", new { id = @item.Category.GenerateSlug()})">@item.Category.Current().Name</a></h3>
                            <h4>
                                <a href="@Url.Action(@item.Category.Name, "Post", new { id = @item.GenerateSlug() })">
                                    @item.Current().Title
                                </a>
                            </h4>
                            <p></p><p>@item.Current().ShortDescription ...</p>
                            <p></p>
                        </div><!-- .post-element -->
                    </div><!-- .col-lg-4 -->
                }
            }

            <div class="append-post-container"></div>
        </div>



        @*<div class="row loader">
                <div class="col-lg-12">
                    <a href="javascript:void(0);" class="load-more-btn" data-total="48">Load more</a>
                </div>
            </div>*@


        <div class="row">
            <div class="col-lg-12 col-md-12 sign-up-big">
                <div class="post-element">
                    <div class="feedback-overlay"></div>
                    <div class="found-overlay">
                        <div>
                            <h2>Good news!</h2>
                            <p>You are already subscribed</p>
                        </div>
                    </div>
                    <div class="success-overlay">
                        <div>
                            <h2>Congratulations!</h2>
                            <p>You successfully signed up</p>
                        </div>
                    </div>

                    <h4>Sign up for our email list</h4>
                    <p>Find out about new art and collections added weekly</p>

                    <div class="content">
                        <div class="feedback">
                            <span></span>
                        </div>

                        <form action="" class="sign-up" novalidate="">
                            <input type="hidden" id="saatchi_wpnonce_field" name="saatchi_wpnonce_field" value="bbfe787331"><input type="hidden" name="_wp_http_referer" value="/">                            <input type="hidden" name="source" value="blog-bottom" autocomplete="off">
                            <input type="text" id="honeypot" name="honeypot" placeholder="Leave this field blank" autocomplete="off">
                            <input type="email" name="email" placeholder="Email Address" autocomplete="off">
                            <button type="submit" class="signup-full">Sign up</button>
                        </form>
                    </div><!-- .content -->
                </div><!-- .post-element -->
            </div><!-- .col-lg-12 -->
        </div><!-- .row -->
    </main><!-- #main -->
</div><!-- #primary -->
