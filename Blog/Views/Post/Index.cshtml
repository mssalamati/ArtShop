        <div id="post-80445" class="post-element post-80445 post type-post status-publish format-standard has-post-thumbnail hentry category-inspiration category-lifestyle">

            <div class="flexslider">
                <div class="slider-overlay">
                    <span class="close"></span>
                </div>

                <ul class="slides">

                    @foreach (var item in Model.HeaderPhotos)
                    {
                        <li class="flex-active-slide" style="width: 100%; float: left; margin-right: -100%; position: relative; opacity: 1; display: block; z-index: 2;">
                            <div class="img-holder">
                                <img src="/@item.Path" draggable="false">
                            </div>
                        </li>
                    }
                </ul>
                <span id="play-youtube"></span>
                <span id="play-vimeo"></span>
                <span id="pause-youtube"></span>
                <span id="pause-vimeo"></span>
                <ol class="flex-control-nav flex-control-paging"></ol><ul class="flex-direction-nav"><li class="flex-nav-prev"><a class="flex-prev flex-disabled" href="#" tabindex="-1"></a></li><li class="flex-nav-next"><a class="flex-next flex-disabled" href="#" tabindex="-1"></a></li></ul>
            </div>

            <div class="row post-wrapper">
                <div class="col-lg-2 hidden-xs hidden-sm hidden-md">
                    <div class="date-info">
                        <p><strong>@Model.PostedOn.ToString("dd MMM yyyy")</strong></p>
                        <p>Posted by</p>
                        <p><strong>@Model.Author</strong></p>
                    </div><!-- .date-info -->

                    <div class="about-info">
                        <h3>About @Model.Category.Current().Name</h3>
                        <p></p><p>@Model.Category.Current().Description</p>
                        <p></p>
                    </div>
                    <div class="tag-info">
                        <h3>Tagged</h3>

                        <ul class="tag-list">
                            @foreach (var item in Model.Tags)
                            {
                                <li>
                                    <a href="">
                                        @item.Current().Name
                                    </a>
                                </li>
                            }

                        </ul>
                    </div>
                </div><!-- .col-lg-2 -->

                <div class="@contentClass post-content">
                    <article>
                        <h3 style="text-align:center !important"><a href="@Url.Action(Model.Category.Name,"Category", new { id = Model.Category.GenerateSlug()})">@Model.Category.Current().Name</a></h3>
                        <h1 style="text-align:center !important">@Model.Current().Title</h1>

                        <div class="date-info hidden-lg">
                            <p><strong>@Model.PostedOn.ToString("dd MMM yyyy")</strong>Posted by <strong>@Model.Author</strong></p>
                        </div><!-- .date-info -->
                        @Html.Raw(Model.Current().Description)
                    </article>



                    <div class="row hidden-lg">
                        <div class="about-info">
                            <h3>About Design Inspiration</h3>
                            <p></p><p>Check out these photo spreads for ideas on how to add style, polish, and the perfect works of art to your home décor.</p>
                            <p></p>
                        </div>
                        <div class="tag-info">
                            <h3>Tagged</h3>

                            <ul class="tag-list">
                                @foreach (var item in Model.Tags)
                                {
                                    <li>
                                        <a href="">
                                            @item.Current().Name
                                        </a>
                                    </li>
                                }

                            </ul>
                        </div>
                    </div><!-- .row -->

                </div><!-- .col-lg-6 -->
                <!-- .col-lg-4 -->
                @if (Model.Links.Count > 0)
                {
                    <div class="col-lg-4 right-sidebar">


                        <h3>New This Week on Artiscovery</h3>
                        @foreach (var item in Model.Links)
                        {
                            <div class="artwork">
                                <a href="@item.URL" target="_blank">
