@model IEnumerable<Language>

@{
    ViewBag.Title = "Index";
}

@Styles.Render("~/Content/Admin/vendor/jquery-labelauty/source/jquery-labelauty.css")

<div class="card bg-white m-b">
    <div class="card-header"> Languages </div>
    <div class="card-block p-a-0">
        <div class="table-responsive">
            @if (Model.Count() != 0)
            {
                <table class="table m-b-0">
                    <tr>
                        <th></th>
                        <th>
                            Idon
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th><i class="fa fa-book"></i></th>
                            <td><img width="20" src='~/Content/Images/@(item.Code + ".svg")' />  @item.Name   <span>&nbsp;</span></td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <div class="alert alert-warning ">
                    هیچ زبانی ثبت نشده
                </div>
            }
        </div>
    </div>
</div>