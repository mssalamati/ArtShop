
@{
    ViewBag.Title = "Index";
}

@model IEnumerable<Product>

<div class="page-title">
    <div class="title">  محصولات</div>
    <ol class="breadcrumb no-bg pl0">
        <li>
            <a href="javascript:;">پنل سازمان</a>
        </li>
        <li>
            <a href="javascript:;"> محصولات</a>
        </li>
    </ol>
</div>


<div class="clearfix"></div>


<div class="m-b clearfix">
    <div class="pull-right">
        <div class="btn-group">
            <button type="button" class="btn btn-default">
                <i class="icon-arrow-right"></i>
            </button>
            <button type="button" class="btn btn-default">
                <i class="icon-arrow-left"></i>
            </button>
        </div>
    </div>
</div>

<div class="card-columns four">
    @if (Model.Count() != 0)
    {
        foreach (var item in Model)
        {
            <div class="card m-t m-b-0 bg-white">
                @if (item.Sqphoto.Path.Contains("artiscovery.com"))
                {
                    <img class="card-img-top img-responsive" alt="Project 0" src="@item.Sqphoto.Path">

                }
                else
                {
                    <img class="card-img-top img-responsive" alt="Project 0" src="http://artiscovery.com/@item.Sqphoto.Path">
                }

                <div class="card-block">
                    <div>@item.user.FirstName @item.user.LastName </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning ">
            هیچ محصولی ثبت نشده
        </div>
    }
</div>


